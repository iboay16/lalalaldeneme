extends ../layaout/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/forms.css") 
block content
    form(action="/admin/add-products", method="post")
        .form-group.row
            label(for="Name", class="col-sm-2 col-form-label") Name
            .col-sm-10
                input.form-control#name(type="text" name="name")
                <br>
        .form-group.row
            label(for="price", class="col-sm-2 col-form-label") price
            .col-sm-10
               input.form-control#price(type="text" name="price")
               <br>
        .form-group.row
            label(for="image", class="col-sm-2 col-form-label") Image
            .col-sm-10
                input.form-control#image(type="text" name="imageUrl")
                <br>
          
        .form-group.row
            label(for="description", class="col-sm-2 col-form-label") description
            .col-sm-10
                 input.form-control#description(type="text" name="description")
                 <br>
        .form-group.row
             .col-sm-10.offset-sm-2
                input(type="submit" value="Save Product").btn.btn-primary


